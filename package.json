{
	"name": "reading-list",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"preinstall": "npx only-allow bun",
		"prepare": "lefthook install",
		"dev": "vite",
		"build": "tsc && vite build && vite build --config vite.config.background.ts",
		"preview": "vite preview",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"lint:fix:unsafe": "biome lint --write --unsafe .",
		"check": "biome check --write .",
		"check-types": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest --watch",
		"test:list": "vitest list",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"lit": "^3.3.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.4",
		"@types/chrome": "^0.1.3",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"happy-dom": "^18.0.1",
		"lefthook": "^1.12.3",
		"playwright": "^1.54.2",
		"prettier": "^3.6.2",
		"typescript": "~5.8.3",
		"vite": "^7.1.2",
		"vitest": "^3.2.4"
	}
}
