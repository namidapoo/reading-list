{
	"manifest_version": 3,
	"name": "Reading List",
	"version": "1.0.0",
	"description": "Save articles and web pages to read later",
	"permissions": ["tabs", "storage", "contextMenus"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/16.png",
			"32": "icons/32.png",
			"48": "icons/48.png",
			"128": "icons/128.png"
		}
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"icons": {
		"16": "icons/16.png",
		"32": "icons/32.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	},
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'none'"
	}
}
